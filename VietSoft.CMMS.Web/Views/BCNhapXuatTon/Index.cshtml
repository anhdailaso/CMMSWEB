@using VietSoft.CMMS.Web.Resources
@using VietSoft.CMMS.Web.Helpers
@{
    ViewBag.Title = "BÁO CÁO XUẤT NHẬP TỒN";
}

<div class="row">
    <div class="col-md-6 offset-md-3 col-xs-12">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item border-0">
                <p class="accordion" id="panelsStayOpen-headingOne">
                    <button class="accordion-button collapsed w-50" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    </button>
                </p>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                    <div class="accordion-body">
                        <form id="formSubmitRequest">
                            <div class="form-floating break-line">
                                <select id="cbokho" name="cbokho" asp-items="@ViewBag.ListKho" class="form-control form-select form-select-sm" placeholder=@ViewText.BTN_DOI_MK>
                                </select>
                                <label for="cbokho">Kho</label>
                            </div>
                            <div class="d-flex justify-content-between gap-2">
                                <div class="form-floating input-group break-line date" id="toDateContainer">
                                    <input type="text" class="form-control" id="fromDate" name="fromDate" autocomplete="off" />
                                    <span class="input-group-append d-flex align-items-center">
                                        <i class="bi bi-calendar4-week date-icon "></i>
                                    </span>
                                    <label for="from">@ViewText.TXT_TUNGAY</label>
                                    <div id="from-error"></div>
                                </div>

                                <div class="form-floating input-group break-line date" id="toDateContainer">
                                    <input type="text" class="form-control" id="toDate" name="toDate" autocomplete="off" />
                                    <span class="input-group-append d-flex align-items-center">
                                        <i class="bi bi-calendar4-week date-icon"></i>
                                    </span>
                                    <label for="toDate">@ViewText.TXT_DENNGAY</label>
                                    <div id="toDate-error"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
      
        <div class="row mb-2">
            <div class="form-floating break-line">
                <select id="cboPhuTung" name="cboPhuTung" asp-items="@ViewBag.ListPhuTung" class="form-control form-select form-select-sm" placeholder=@ViewText.BTN_DOI_MK>
                </select>
                <label for="cboPhuTung">Scan phụ tùng</label>
                <a data-bs-toggle="modal" data-bs-target="#modalCameraScanner" onclick="SetActive(this)" data-url="@Url.Action("CamareaScanner", "Camera")">
                    <img src="~/images/barcode.png" alt="image" style="margin-right: 1rem;" class="icon-barcode">
                </a>
            </div>

            <div class="col-md-12 offset-md-12 col-xs-12  px-0">
                <div id="GetNhapXuatTon">
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@section scripts {
    <script>
        var config = {
            GET_NHAPXUATTON: '@Url.Action("GetBaoCaoNhapXuatTon", "BCNhapXuatTon")',
        }
    </script>
    <script src="~/js/pages/nhapxuaton.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            NhapXuatTonModule.init();
        });
    </script>
}

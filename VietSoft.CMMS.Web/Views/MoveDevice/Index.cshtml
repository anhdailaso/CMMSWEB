@using VietSoft.CMMS.Web.Resources
@using VietSoft.CMMS.Web.Helpers
@{
    ViewBag.Title = "DI CHUYỂN THIẾT BỊ";
}
<div class="row">
    <div class="col-md-6 offset-md-3 col-xs-12">
        <div class="form-check form-check-inline break-line">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="false" checked>
            <label class="form-check-label" for="inlineRadio1">Chuyển đi</label>
        </div>
        <div class="form-check form-check-inline break-line">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="true">
            <label class="form-check-label" for="inlineRadio2">Chuyển đến</label>
        </div>
        <div class="form-floating break-line">
            <select id="cboDiaDiemDi" name="cboDiaDiemDi" asp-items="@ViewBag.ListNhaXuong" class="form-control form-select form-select-sm">
            </select>
            <label for="cboDiaDiemDi">Nơi chuyển đi</label>
            <a data-bs-toggle="modal" data-bs-target="#modalCameraScanner" onclick="SetActive(this)" data-url="@Url.Action("CamareaScanner", "Camera")">
                <img src="~/images/barcode.png" alt="image" class="icon-barcode">
            </a>
        </div>
        <div class="form-floating break-line">
            <select id="cboDiaDiemDen" name="cboDiaDiemDen" asp-items="@ViewBag.ListNhaXuong" class="form-control form-select form-select-sm">
            </select>
            <label for="cboDiaDiemDen">Nơi chuyển đến</label>
            <a data-bs-toggle="modal" data-bs-target="#modalCameraScanner" onclick="SetActive(this)" data-url="@Url.Action("CamareaScanner", "Camera")">
                <img src="~/images/barcode.png" alt="image" class="icon-barcode">
            </a>
        </div>
        <div class="form-floating break-line">
            <select id="cboMay" name="cboMay" asp-items="@ViewBag.ListMAY" class="form-control form-select form-select-sm">
            </select>
            <label for="cboMay">@ViewText.TXT_THIET_BI</label>
            <div id="cboMay-error"></div>
            <a data-bs-toggle="modal" data-bs-target="#modalCameraScanner" onclick="SetActive(this)" data-url="@Url.Action("CamareaScanner", "Camera")">
                <img src="~/images/barcode.png" alt="image" class="icon-barcode">
            </a>
        </div>
        <div class="row mb-2">
            <div class="col-md-12 offset-md-12 col-xs-12  px-0">
                <div id="GetMoveDevice">
                </div>
            </div>
        </div>
        <br />
    </div>
</div>

<nav class="fixed-bottom">
    <div class="navbar-button  text-center text-white">
        <div id="button-container" class="btn-group">
            <a class="btn btn-outline-dark m-1" role="button" href="@Url.Action("Index","Home")">
                <i class="fa fa-home fs-7" aria-hidden="true"></i>
            </a>

            <!-- Twitter -->
            <a class="btn btn-outline-primary m-1" id='btnsave' role="button">
                <i class="fa fa-floppy-o fs-7"></i>
            </a>

            <!-- Google -->
            <a class="btn btn-outline-warning m-1" id="btnhuy" role="button">
                <i class="fa fa-times fs-7"></i>
            </a>
        </div>
    </div>
</nav>

@section scripts {
    <script src="~/lib/jquery.twbsPagination/jquery.twbsPagination.min.js"></script>
    <script>
        var config = {
            GET_MOVE_DIVE: '@Url.Action("GetListMoveDevice", "MoveDevice")',
            SAVE_MOVE_DIVE: '@Url.Action("SaveListMoveDevice", "MoveDevice")',
            SAVE_DATA_MOVE_DIVE: '@Url.Action("SaveListDataMoveDevice", "MoveDevice")',
            GET_MAY: '@Url.Action("getDevices", "Home")',
            GET_MAY_DEN: '@Url.Action("getToDevices", "MoveDevice")',
            PAGE_SIZE: 10
        }
    </script>
    <script src="~/js/pages/movedevice.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            MoveDeviceModule.init();
        });
    </script>
}

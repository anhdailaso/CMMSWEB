@using VietSoft.CMMS.Web.Resources
@model IEnumerable<VietSoft.CMMS.Web.Models.PhieuNhapKhoChiPhiModel>
<div class="modal-header">
    <h5>Nhập chi phí mua hàng</h5>
    <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body modal-confirm" id="modalResultContent">
    <div class="row mb-2">
        <div class="col-12">
            @if (Model != null && Model.Count() > 0)
            {
                <table class="table table-striped" cellspacing="0" id="tbGetMyEcomain" style="width:100% !important">
                    <thead>
                        <tr>
                            <td width="25%" class="col-grid-table ">
                                Loại chi phí
                                <span class="tooltip">Tooltip</span>
                            </td>
                            <td width="30%">
                                Cách phân bổ
                            </td>
                            <td width="20%">
                                Số tiền
                            </td>
                            <td width="25%">
                                Ghi chú
                            </td>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td data-id="@item.MS_CHI_PHI">
                                    @item.TEN_CP
                                </td>
                                <td>
                                    @Html.DropDownListFor(modelItem => item.DANG_PB,(IEnumerable<SelectListItem>)@ViewBag.DANGPB, new {  @class = "form-select-sm"})

                                </td>
                                <td>
                                    @item.TONG_CP.ToString("N2")
                                </td>
                                <td>
                                    @item.GHI_CHU
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="col-12">
                    <div class="no-data">
                        <span>@ViewText.TXT_KHONGCO_DULIEU</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal-footer justify-content-between gap-1 flex-nowrap">
    <button type="button" class="btn btn-outline-danger w-50" onclick="ClosePopup(this)" id="btnCancel">@ViewText.BTN_DONG</button>
    <button type="button" class="btn btn-primary w-50" id="btnAddSupplies">@ViewText.BTN_LUU</button>
</div>
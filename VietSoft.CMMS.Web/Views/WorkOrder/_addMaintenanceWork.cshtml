@using VietSoft.CMMS.Web.Resources
@model IEnumerable<VietSoft.CMMS.Web.Models.Maintenance.WorkOrderDetailViewModel>
<div class="modal-header">
    <h5>@ViewText.TXT_THEM_CONGVIEC_BAOTRI</h5>
    <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body modal-confirm">
    <div class="row mb-2">
        <table class="table table-responsive table-borderless cuscess table-normal">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="w-30">+ @item.MS_BO_PHAN</td>
                        <td class="w-50 " style="text-align:left !important">@item.MO_TA_CV</td>
                        <td class="w-20">
                            <div class="mx-3 my-1">
                                <input class="form-check-input input-add-work" type="checkbox"
                                data-ms-cviec=@item.MS_CV data-ms-bophan=@item.MS_BO_PHAN>
                            </div>
                        </td>
                        <td class="d-none">@item.TEN_BO_PHAN</td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>

<div class="modal-footer justify-content-between gap-1 flex-nowrap">
    <button type="button" class="btn btn-outline-danger w-50" onclick="ClosePopup(this)" id="btnCancel">@ViewText.BTN_DONG</button>
    <button type="button" class="btn btn-primary w-50" id="btnAddWorkList">@ViewText.BTN_LUU</button>
</div>
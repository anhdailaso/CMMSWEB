                <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                    <div class="table-responsive">
                        <table class="table table-responsive table-borderless">
                            <tbody>
                                <tr>
                                    <td style="line-height:2.1rem">Tốt</td>
                                    <td><input class="form-check-input" style="margin-top:0.8rem" type="checkbox"></td>
                                    <td> <input class="form-control" style="font-size:0.8rem;" type="text" placeholder="ghi chú" aria-label="default input example" /></td>

@using VietSoft.CMMS.Web.Resources
@using VietSoft.CMMS.Web.Helpers
@inject IHttpContextAccessor HttpContextAccessor
@model VietSoft.CMMS.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = @ViewText.TITLE_QUEN_MK;
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="form-login">
    <div class="col-md-6 offset-md-3 col-xs-12 login-frame">
        <div class="justify-content-center mb-4 text-uppercase">
            <a href="javascript:void(0)">
                <img src="/images/logo.jpg" class="login-logo mt-3" />
            </a>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm("ForgotPasswordAction", "Account", FormMethod.Post, new { id = "forgotPassForm", name = "forgotPassForm", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <h5 class="text-primary text-center">@ViewText.LBL_QUEN_MK</h5>
                        <br />
                        <div class="form-group mb-4">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", maxlength = 50, autofocus = "true", placeholder = @ViewText.LBL_TEN_DANG_NHAP, autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>

                        <div class="form-group text-center mb-3">
                            <button class="btn btn-grad btn-primary-login" type="submit" id="login">@ViewText.BTN_QUEN_MK</button>
                        </div>
                        <div class="text-center">
                            <a href="/Account/Login" class="text-primary">
                                <i class="bi bi-arrow-left"></i>
                                @ViewText.BTN_DANGNHAP
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

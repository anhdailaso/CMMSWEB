@using VietSoft.CMMS.Web.Resources
@using VietSoft.CMMS.Web.Helpers
@{
    ViewBag.Title = "KIỂM KÊ THIẾT BỊ";
    ViewBag.BackUrl = @Url.Action("Index", "Home", new { });
}

<div class="row">
    <div class="col-md-6 offset-md-3 col-xs-12  marrgin-bottom">
        <div class="form-floating break-line">
            @Html.TextBox("MS_N_XUONG", null, new { @class = "form-control", maxlength = 250, autocomplete = "off" , placeholder="Scan vị trí kiểm kê"})
            <label for="MS_N_XUONG">Scan vị trí kiểm kê</label>
            <a data-bs-toggle="modal" data-bs-target="#modalCameraScanner" onclick="SetActive(this)" data-url="@Url.Action("CamareaScanner", "Camera")">
                <img src="~/images/barcode.png" alt="image" class="icon-barcode">
            </a>
        </div>
        <div class="form-floating break-line disabled" id="area-scan-index">
            @Html.TextBox("MS_MAY", null, new { @class = "form-control", maxlength = 250, autocomplete = "off", tabindex="-1" , placeholder="Scan máy"})
            <label for="MS_MAY">Scan máy</label>
            <a data-bs-toggle="modal" data-bs-target="#modalCameraScanner" onclick="SetActive(this)" data-url="@Url.Action("CamareaScanner", "Camera")">
                <img src="~/images/barcode.png" alt="image" class="icon-barcode">
            </a>
        </div>

        <div class="col-md-12 offset-md-12 col-xs-12  px-0">
            <div id="GetMoveDivice">
                <div class="card card-list">
                    <div class="card-body">
                        <div style="padding-bottom:0.3rem;justify-content:space-between" class="d-flex">
                            <div class="d-flex gap-2 ">
                                <span>Mã số máy:</span>
                                <span class="card-value">TAN-003</span>
                            </div>
                            <div class="d-flex gap-2">
                                <span>Tên máy:</span>
                                <span class="card-value">Máy tán đinh</span>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <span>mã VT:</span>
                            <span class="card-value">L-0003</span>
                        </div>
                    </div>
                </div>

                <div class="card card-list">
                    <div class="card-body">
                        <div style="padding-bottom:0.3rem;justify-content:space-between" class="d-flex">
                            <div class="d-flex gap-2 ">
                                <span>Mã số máy:</span>
                                <span class="card-value">TAN-003</span>
                            </div>
                            <div class="d-flex gap-2">
                                <span>Tên máy:</span>
                                <span class="card-value">Máy tán đinh</span>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <span>mã VT:</span>
                            <span class="card-value">L-0003</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<nav class="fixed-bottom">
    <div class="navbar-button  text-center text-white">
        <div id="button-container" class="btn-group">
            <a class="btn btn-outline-dark m-1" role="button" href="@Url.Action("Index","Home")">
                <i class="fa fa-home fs-7" aria-hidden="true"></i>
            </a>

            <!-- Twitter -->
            <a class="btn btn-outline-primary m-1" id='btnsave' role="button">
                <i class="fa fa-floppy-o fs-7"></i>
            </a>

            <!-- Google -->
            <a class="btn btn-outline-warning m-1" id="btnhuy" role="button">
                <i class="fa fa-times fs-7"></i>
            </a>
        </div>
    </div>
</nav>
@section scripts {
    <script>
        var config = {
            GET_LIST_HISTORY: '@Url.Action("GetListHistory", "History")',
            PAGE_SIZE: 10
        }
    </script>

    <script src="~/js/pages/history.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            HistoryModule.init();
        });
    </script>
    }

                                            <ul class="list-unstyled fw-normal pb-1 ps-3">
                                                @foreach (MenuViewModel subMenu in subMenuByParent)
                                                {
                                                    <li><a href="@subMenu.MenuUrl" class="nav-link d-inline-flex align-items-center rounded">@subMenu.MenuName</a></li>
                                                }
                                            </ul>
                                        </div>
                                    }
